@model AppCondominio.Models.OrcamentoMateriais

@{
    ViewData["Title"] = "Orcamento";
}

<h1>Orcamento Fornecedor</h1>

<div>
    <h4>Materiais</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class="col-sm-10">
            <span style="font-weight: bold">CNPJ:</span> @Model.Fornecedor.CNPJ
            <br />
            <span style="font-weight: bold">Nome:</span> @Model.Fornecedor.Nome
</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Materiais)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Materiais)
            {
                @item.Nome @:- Valor: @item.ValorUnitario - Quantidade: @item.Quantidade
                @:<br />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeDeMateriais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeDeMateriais)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>
<div>
<a asp-action="Index">Back to List</a>
</div>

